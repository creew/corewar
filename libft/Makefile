NAME 	= 	libft.a

SRCS		= 	ft_atoi.c ft_bzero.c ft_check_float.c ft_count_words.c ft_display.c \
			ft_initial.c ft_isalnum.c ft_isalpha.c ft_isascii.c ft_isdigit.c \
			ft_isprint.c ft_itoa.c ft_lstadd.c ft_lstdel.c ft_lstdelone.c ft_lstiter.c \
			ft_lstmap.c ft_lstnew.c ft_max.c ft_memalloc.c ft_memccpy.c ft_memchr.c \
			ft_memcmp.c ft_memcpy.c ft_memdel.c ft_memmove.c ft_memset.c ft_min.c \
			ft_parser.c ft_parser_add.c ft_print_d.c ft_print_float.c \
			ft_print_float_add.c ft_print_ou.c ft_print_s.c ft_print_xxxp.c ft_printf.c \
			ft_putchar.c ft_putchar_fd.c ft_putendl.c ft_putendl_fd.c ft_putnbr.c \
			ft_putnbr_fd.c ft_putstr.c ft_putstr_fd.c ft_rvrs.c ft_sort_int.c ft_strcat.c \
			ft_strchr.c ft_strclr.c ft_strcmp.c ft_strcpy.c ft_strdel.c ft_strdup.c \
			ft_strequ.c ft_striter.c ft_striteri.c ft_strjoin.c ft_strlcat.c ft_strlen.c \
			ft_strmap.c ft_strmapi.c ft_strncat.c ft_strncmp.c ft_strncpy.c ft_strnequ.c \
			ft_strnew.c ft_strnstr.c ft_strrchr.c ft_strsplit.c ft_strstr.c ft_strsub.c \
			ft_strtrim.c ft_swap_int.c ft_switch_print.c ft_tolower.c ft_toupper.c \
			get_next_line.c

INC     =   incl

SRC = $(addprefix src/, $(SRCS))

OBJS = $(subst .c,.o, $(SRC))

all: $(NAME)

$(NAME):    $(OBJS)
			@ar rc $(NAME) $(OBJS)
			@ranlib $(NAME)

%.o :%.c
			gcc -Wall -Wextra -Werror $< -c -o $@ $(addprefix -I,$(INC))

clean:
		@rm -rf $(OBJS)

fclean: clean
		@rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re
